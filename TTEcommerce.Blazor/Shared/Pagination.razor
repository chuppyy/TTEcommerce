@code {
    [Parameter] public int CurrentPage { get; set; }
    [Parameter] public int TotalPages { get; set; }
    [Parameter] public EventCallback<int> OnPageSelected { get; set; }

    private const int MaxVisiblePages = 5;

    private async Task SelectPage(int page)
    {
        if (page >= 1 && page <= TotalPages && page != CurrentPage)
        {
            await OnPageSelected.InvokeAsync(page);
        }
    }

    private int StartPage => Math.Max(1, CurrentPage - MaxVisiblePages / 2);
    private int EndPage => Math.Min(TotalPages, StartPage + MaxVisiblePages - 1);
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" @onclick="() => SelectPage(CurrentPage - 1)" href="javascript:void(0);">Previous</a>
        </li>

        @if (StartPage > 1)
        {
            <li class="page-item">
                <a class="page-link" @onclick="() => SelectPage(1)" href="javascript:void(0);">1</a>
            </li>
            @if (StartPage > 2)
            {
                <li class="page-item disabled"><span class="page-link">...</span></li>
            }
        }

        @for (int i = StartPage; i <= EndPage; i++)
        {
            int pageNumber = i;
            <li class="page-item @(CurrentPage == pageNumber ? "active" : "")">
                <a class="page-link" @onclick="() => SelectPage(pageNumber)" href="javascript:void(0);">@pageNumber</a>
            </li>
        }

        @if (EndPage < TotalPages)
        {
            @if (EndPage < TotalPages - 1)
            {
                <li class="page-item disabled"><span class="page-link">...</span></li>
            }
            <li class="page-item">
                <a class="page-link" @onclick="() => SelectPage(TotalPages)" href="javascript:void(0);">@TotalPages</a>
            </li>
        }

        <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
            <a class="page-link" @onclick="() => SelectPage(CurrentPage + 1)" href="javascript:void(0);">Next</a>
        </li>
    </ul>
</nav>
